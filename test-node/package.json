{
  "name": "test-node",
  "version": "6.2.1",
  "private": true,
  "description": "Tests for the Node part of ember-intl",
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-intl/ember-intl.git"
  },
  "license": "MIT",
  "author": "jason.mitchell.w@gmail.com",
  "type": "module",
  "scripts": {
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\"",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "test": "./build.sh --test && mt dist-for-testing --quiet && mocha \"unit/**/*.{cjs,js}\"",
    "test-on-windows": ".\\build.sh --test && mt dist-for-testing --quiet && mocha \"unit/**/*.{cjs,js}\""
  },
  "devDependencies": {
    "@formatjs/icu-messageformat-parser": "^2.7.3",
    "@shared-configs/eslint-config-node": "workspace:*",
    "@shared-configs/prettier": "workspace:*",
    "@shared-configs/typescript": "workspace:*",
    "@sondr3/minitest": "^0.1.2",
    "@types/node": "^18.19.4",
    "broccoli-test-helper": "^2.0.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^8.2.2",
    "ember-intl": "workspace:*",
    "eslint": "^8.54.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": "16.* || >= 18"
  }
}
