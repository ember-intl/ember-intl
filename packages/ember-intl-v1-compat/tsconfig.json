{
  "extends": "@shared-configs/typescript/ember",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/*": ["tests/dummy/app/*", "app/*"],
      "@ember-intl/v1-compat": ["addon"],
      "@ember-intl/v1-compat/*": ["addon/*"],
      "@ember-intl/v1-compat/test-support": ["addon-test-support"],
      "@ember-intl/v1-compat/test-support/*": ["addon-test-support/*"],
      "*": ["types/*"]
    },
    "types": ["ember-source/types"]
  },
  "include": [
    "addon/**/*",
    "addon-test-support/**/*",
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  }
}
