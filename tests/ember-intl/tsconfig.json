{
  "extends": "@shared-configs/typescript/ember",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "ember-intl": ["../../packages/ember-intl/addon"],
      "ember-intl/*": ["../../packages/ember-intl/addon/*"],
      "ember-intl/test-support": ["../../packages/ember-intl/addon-test-support"],
      "ember-intl/test-support/*": ["../../packages/ember-intl/addon-test-support/*"],
      "test-app-for-ember-intl/tests/*": ["tests/*"],
      "test-app-for-ember-intl/*": ["app/*"],
      "*": ["types/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }
}
