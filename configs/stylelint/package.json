{
  "name": "@shared-configs/stylelint",
  "version": "0.0.0",
  "private": true,
  "description": "Configuration for stylelint",
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-intl/ember-intl.git"
  },
  "author": "Isaac J. Lee",
  "type": "module",
  "exports": {
    ".": {
      "import": "./default/index.mjs",
      "require": "./default/index.cjs"
    }
  },
  "scripts": {
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\"",
    "lint:js": "prettier \"**/*.{cjs,mjs}\" --check",
    "lint:js:fix": "prettier \"**/*.{cjs,mjs}\" --write"
  },
  "dependencies": {
    "@ijlee2-frontend-configs/stylelint": "^0.2.1"
  },
  "devDependencies": {
    "@shared-configs/prettier": "workspace:*",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "prettier": "^3.5.3",
    "stylelint": "^16.15.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": false
    },
    "stylelint": {
      "optional": false
    }
  },
  "engines": {
    "node": "18.* || >= 20"
  }
}
