{
  "name": "@shared-configs/eslint-config-node",
  "version": "0.0.0",
  "private": true,
  "description": "Configuration for eslint (Node)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-intl/ember-intl.git"
  },
  "author": "Isaac J. Lee",
  "type": "module",
  "exports": {
    "./javascript": "./javascript/index.mjs",
    "./typescript": "./typescript/index.mjs"
  },
  "scripts": {
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\"",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix"
  },
  "dependencies": {
    "@ijlee2-frontend-configs/eslint-config-node": "^0.2.7"
  },
  "devDependencies": {
    "@shared-configs/prettier": "workspace:*",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "prettier": {
      "optional": false
    },
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": "18.* || >= 20"
  }
}
